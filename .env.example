# Django Settings
DJANGO_SETTINGS_MODULE=config.settings.development
SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_URL=postgresql://budget_user:budget_pass@localhost:5432/budget_suite

# Redis (used for Channels WebSocket and Celery)
# On Railway: Use the REDIS_URL from your linked Redis service
REDIS_URL=redis://localhost:6379/0

# Celery (optional - defaults to REDIS_URL if not set)
# Only set these if you need separate Redis instances for Celery
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Claude API
ANTHROPIC_API_KEY=your-anthropic-api-key-here
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=4000

# Google Gemini API (for YouTube video transcript extraction)
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# YouTube Data API (for fetching video captions)
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Enable "YouTube Data API v3" in your Google Cloud project
YOUTUBE_API_KEY=your-youtube-api-key-here

# Channels
CHANNEL_LAYERS_BACKEND=channels_redis.core.RedisChannelLayer
